<!--Custom Style CSS	-->
<link rel="stylesheet" href="~/css/style.css" type="text/css">	
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Klinika</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-hospital"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Training" asp-action="Index"><i class="bi bi-hospital"></i> Offers</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="Index"><i class="bi bi-hospital"></i> News</a>
                        </li>

                        @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-gear"></i> Management
                                </a>
                                @using KlinikaProjekt.Models

                              
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-controller="Department" asp-action="Index"><i class="bi bi-activity"></i> Department</a>
                                        <a class="dropdown-item" asp-controller="Patient" asp-action="Index"><i class="bi bi-person-heart"></i> Patient</a>
                                        <a class="dropdown-item" asp-controller="Doctors" asp-action="Index"><i class="bi bi-person-workspace"></i> Doctor</a>
                                        <a class="dropdown-item" asp-controller="News" asp-action="Index"><i class="bi bi-person-workspace"></i> News</a>
                                        <a class="dropdown-item" asp-controller="Appointments" asp-action="Index"><i class="bi bi-person-workspace"></i> Appointments</a>
                                          
                                         <a class="dropdown-item" asp-controller="Contacts" asp-action="Index"><i class="bi bi-person-workspace"></i> Contact Requests</a><a class="dropdown-item" asp-controller="Services" asp-action="Index"><i class="bi bi-person-workspace"></i> Services</a>
                                            <a class="dropdown-item" asp-controller="Reviews" asp-action="Index"><i class="bi bi-person-workspace"></i> Reviews</a>
                                    </div>
                                </li>
                        }
                        
                    </ul>

                    

                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul>

                    <partial name="_Identity.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <!-- Remove the container if you want to extend the Footer to full width. -->

  <!-- Footer -->
  <footer class="text-center text-white" style="background-color: #3f51b5;padding:0!important">
    <!-- Grid container -->

      <!-- Section: Links -->
      <section class="mt-5">
        <!-- Grid row-->
        <div class="row text-center d-flex justify-content-center pt-5">
          <!-- Grid column -->
          <div class="col-md-2">
            <h6 class="text-uppercase font-weight-bold">
              <a href="@Url.Action("Index","Home")#about-section" class="text-white">About us</a>
            </h6>
          </div>
          <!-- Grid column -->

          <!-- Grid column -->
          <div class="col-md-2">
            <h6 class="text-uppercase font-weight-bold">
              <a href="@Url.Action("Index","Home")#services-section" class="text-white">Services</a>
            </h6>
          </div>
          <!-- Grid column -->

          <!-- Grid column -->
          <div class="col-md-2">
            <h6 class="text-uppercase font-weight-bold">
              <a href="@Url.Action("Index","Home")#review-section" class="text-white">Feedbacks</a>
            </h6>
          </div>
          <!-- Grid column -->

          <!-- Grid column -->
          <div class="col-md-2">
            <h6 class="text-uppercase font-weight-bold">
              <a asp-controller="Appointments" asp-action="Create" class="text-white">Book Appointmet</a>
            </h6>
          </div>
          <!-- Grid column -->

          <!-- Grid column -->
          <div class="col-md-2">
            <h6 class="text-uppercase font-weight-bold">
              <a asp-controller="Contacts" asp-action="Create" class="text-white">Contact</a>
            </h6>
          </div>
          <!-- Grid column -->
        </div>
        <!-- Grid row-->
      </section>
      <!-- Section: Links -->

      <hr class="my-5" />

      <!-- Section: Text -->
      <section class="mb-5">
        <div class="row d-flex justify-content-center">
          <div class="col-lg-8">
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt
              distinctio earum repellat quaerat voluptatibus placeat nam,
              commodi optio pariatur est quia magnam eum harum corrupti
              dicta, aliquam sequi voluptate quas.
            </p>
          </div>
        </div>
      </section>
      <!-- Section: Text -->

      <!-- Section: Social -->
     
      <!-- Section: Social -->

    <!-- Grid container -->

    <!-- Copyright -->
    <div
         class="text-center p-3"
         style="background-color: rgba(0, 0, 0, 0.2)"
         >
      © 2022 Copyright:
      <a class="text-white" asp-controller="Home" asp-action="Index">Klinika</a>
    </div>
    <!-- Copyright -->
  </footer>



